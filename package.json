{
  "name": "openafpm-cad-desktop-app",
  "version": "1.0.0-SNAPSHOT",
  "description": "Desktop application to visualize wind turbine designs.",
  "main": "backend/electron.js",
  "scripts": {
    "start": "electron .",
    "pack": "DEBUG=electron-builder electron-builder --dir",
    "dist": "find ./dist/ -mindepth 1 -maxdepth 1 -type d ! -name '_*' | xargs electron-builder --prepackaged"
  },
  "keywords": [],
  "author": "G Roques",
  "license": "LGPL-2.1-or-later",
  "dependencies": {
    "@material/web": "^2.2.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "lit": "^3.2.1",
    "openafpm-cad-visualization": "git+https://github.com/gbroques/openafpm-cad-visualization.git#b1b848b62839f67f38a517e6d48c06cb8bb03dc4",
    "portfinder": "^1.0.32"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "openafpm-cad-desktop-app",
    "asar": false,
    "files": [
      "**/*",
      "!squashfs-root",
      "!node_modules",
      "!freecad.AppImage",
      "!freecad.zip",
      "!freecad.dmg"
    ],
    "afterPack": "./afterPack.js",
    "linux": {
      "target": "AppImage"
    },
    "win": {
      "target": "portable"
    },
    "mac": {
      "target": "dmg",
      "icon": "backend/icon_512x512.png"
    }
  }
}
