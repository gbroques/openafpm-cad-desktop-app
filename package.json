{
  "name": "openafpm-cad-desktop-app",
  "version": "1.0.0-SNAPSHOT",
  "description": "Desktop application to visualize wind turbine designs.",
  "main": "backend/electron.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "find dist -type d -name '*-unpacked' | xargs electron-builder --prepackaged"
  },
  "keywords": [],
  "author": "G Roques",
  "license": "LGPL-2.1-or-later",
  "dependencies": {
    "@material/web": "^1.4.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "lit": "^3.2.1",
    "openafpm-cad-visualization": "git+https://github.com/gbroques/openafpm-cad-visualization.git#d60bc10c986b7b15e4d098207f2d40f8a7a5044f",
    "portfinder": "^1.0.32"
  },
  "devDependencies": {
    "electron": "^29.1.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "openafpm-cad-desktop-app",
    "asar": false,
    "files": [
      "**/*",
      "!freecad.AppImage",
      "!squashfs-root",
      "!freecad.zip"
    ],
    "afterPack": "./afterPack.js",
    "linux": {
      "target": "AppImage"
    },
    "win": {
      "target": "portable"
    }
  }
}
