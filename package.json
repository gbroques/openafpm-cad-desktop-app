{
  "name": "openafpm-cad-desktop-app",
  "version": "1.0.0-SNAPSHOT",
  "description": "Desktop application to visualize wind turbine designs.",
  "main": "backend/electron.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "find dist -type d -name '*-unpacked' | xargs electron-builder --prepackaged"
  },
  "keywords": [],
  "author": "G Roques",
  "license": "LGPL-2.1-or-later",
  "dependencies": {
    "@material/web": "^1.4.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "lit": "^3.1.3",
    "openafpm-cad-visualization": "git+https://github.com/gbroques/openafpm-cad-visualization.git#7d65cdd3a14377a6091f03262e62b8130d25f3e0",
    "portfinder": "^1.0.32"
  },
  "devDependencies": {
    "electron": "^29.1.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "openafpm-cad-desktop-app",
    "asar": false,
    "files": [
      "**/*",
      "!freecad.AppImage",
      "!squashfs-root",
      "!freecad.zip"
    ],
    "afterPack": "./afterPack.js",
    "linux": {
      "target": "AppImage"
    },
    "win": {
      "target": "portable"
    }
  }
}
