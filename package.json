{
  "name": "openafpm-cad-desktop-app",
  "version": "1.0.0-SNAPSHOT",
  "description": "Desktop application to visualize wind turbine designs.",
  "main": "backend/electron.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "pack": "DEBUG=electron-builder electron-builder --dir",
    "dist": "find ./dist/ -mindepth 1 -maxdepth 1 -type d ! -name '_*' | xargs electron-builder --prepackaged",
    "postinstall": "./install-python-dependencies.sh"
  },
  "keywords": [],
  "author": "G Roques",
  "license": "LGPL-2.1-or-later",
  "dependencies": {
    "7zip-bin": "^5.2.0",
    "@material/web": "^2.2.0",
    "express": "^4.21.2",
    "lit": "^3.2.1",
    "openafpm-cad-visualization": "git+https://github.com/gbroques/openafpm-cad-visualization.git#1dcd63aba117e64ec3f80291b58e5624cb710b2d",
    "portfinder": "^1.0.32"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "openafpm-cad-desktop-app",
    "asar": false,
    "artifactName": "${name}-${version}-${env.BUILD_DATE}-${os}-${arch}.${ext}",
    "publish": null,
    "files": [
      "**/*",
      "!**/.git",
      "!node_modules",
      "!site-packages"
    ],
    "afterPack": "./afterPack.js",
    "linux": {
      "target": "AppImage"
    },
    "win": {
      "target": "portable"
    },
    "mac": {
      "target": "dmg",
      "icon": "backend/icon_512x512.png"
    }
  }
}
